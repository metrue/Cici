@require './base'

.list-view
  margin 0 20px
  ol,
  ul
    padding 0
    list-style none

.list-item
  position relative

.item-title
  display inline-block
  margin-bottom 10px
  font-size fontSize + 2
  color textColor
  opacity: .45
  font-weight: 500
  letter-spacing 0.1rem
  &:hover
    color black

.item-date
  display inline-block
  font-size fontSize - 4
  color metaColor
  padding-top 12px
