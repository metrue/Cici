@require './base'

.post-view
  margin 0 20px 50px
  a:hover
    border-bottom 1px dashed linkColor

.post-title
  line-height 1
  margin-bottom 50px
  text-align left
  font-size 1.2em
  margin-top 10%

article
  p
    font-size 16px
    word-break break-word

.comments
  padding 0
  pre
    padding 0

// when smaller than tablet
@media (max-width: 767px)
  .post-title
    font-size 1.2em

.post-date
  float right
  font-size fontSize - 2
  line-height 2
  color metaColor

pre
  background codeBgColor !important
  padding 16px
  overflow-x auto
  white-space pre
  font-size: 0.8em;
  line-height: 12px;

blockquote
  margin 0
  padding 0 16px
  border-left 4px solid #ddd
